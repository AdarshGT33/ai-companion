generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider     = "cockroachdb"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Category {
  id        String      @id @default(uuid())
  name      String
  companion Companion[]
}

model Companion {
  id          String   @id @default(uuid())
  userId      String
  username    String
  src         String
  description String
  instruction String   @db.String(500)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  categoryId  String
  name        String   @db.String(300)
  seed        String   @db.String(500)
  category    Category @relation(fields: [categoryId], references: [id])

  @@index([categoryId])
}
